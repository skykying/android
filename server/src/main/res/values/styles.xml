<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/ToolbarPopupTheme</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- app branding color for the app bar -->
        <item name="colorPrimary">@color/ui_primary</item>
        <!-- darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/ui_primary_dark</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/ui_primary</item>

        <item name="android:windowBackground">@color/ui_background</item>
        <item name="android:textColorPrimary">@color/ui_text</item>

        <!-- https://stackoverflow.com/questions/31777167/android-options-menu-is-transparent -->
        <item name="android:panelBackground">@color/ui_background</item>

        <!-- make all buttons coloured -->
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:popupBackground">@color/colorPrimary</item> <!--更改背景颜色-->
    </style>

</resources>