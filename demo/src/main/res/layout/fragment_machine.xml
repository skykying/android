<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yarolegovich.mp.MaterialPreferenceCategory
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mpc_title="@string/opsCloud">

        <com.yarolegovich.mp.MaterialRightIconPreference
            android:id="@+id/mdevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mp_icon="@android:drawable/arrow_down_float"
            app:mp_icon_tint="@color/textSecondary"
            app:mp_title="@string/opsMessage" />

        <com.yarolegovich.mp.MaterialRightIconPreference
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mp_icon="@android:drawable/arrow_down_float"
            app:mp_icon_tint="@color/textSecondary"
            app:mp_title="@string/opsDevice" />

        <com.yarolegovich.mp.MaterialRightIconPreference
            android:layout_margin="1dp"
            android:id="@+id/donate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mp_icon="@android:drawable/arrow_down_float"
            app:mp_icon_tint="@color/textSecondary"
            app:mp_title="@string/opsMachine" />

    </com.yarolegovich.mp.MaterialPreferenceCategory>

    <com.yarolegovich.mp.MaterialPreferenceCategory
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mpc_title="@string/opsVms">

        <com.yarolegovich.mp.MaterialRightIconPreference
            android:id="@+id/terminal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mp_icon="@drawable/ic_star_border_black_24dp"
            app:mp_icon_tint="@color/textSecondary"
            app:mp_title="@string/opsFindLocalDevice" />

    </com.yarolegovich.mp.MaterialPreferenceCategory>

    <com.yarolegovich.mp.MaterialPreferenceCategory
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mpc_title="@string/opsDatabase">

        <com.yarolegovich.mp.MaterialRightIconPreference
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mp_icon="@android:drawable/arrow_down_float"
            app:mp_icon_tint="@color/textSecondary"
            app:mp_title="@string/opsHistory" />

    </com.yarolegovich.mp.MaterialPreferenceCategory>

    <com.yarolegovich.mp.MaterialPreferenceCategory
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mpc_title="@string/deviceOps">

        <com.yarolegovich.mp.MaterialRightIconPreference
            android:id="@+id/terminal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mp_icon="@drawable/ic_star_border_black_24dp"
            app:mp_icon_tint="@color/textSecondary"
            app:mp_title="@string/opsFindLocalDevice" />

        <com.yarolegovich.mp.MaterialRightIconPreference
            android:id="@+id/ufind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mp_icon="@drawable/ic_local_atm_black_24dp"
            app:mp_icon_tint="@color/textSecondary"
            app:mp_title="@string/opsMore" />

    </com.yarolegovich.mp.MaterialPreferenceCategory>

</LinearLayout>
